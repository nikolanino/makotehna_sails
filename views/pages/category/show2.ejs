<div class="header">
	<div class="container">
		<a href="/"><img src="../images/logo.png"></a>
		<hr>
		<div class="headerButtons">
			<div class="navbar">
				<a href="/proizvodi" class="bigButton">Производи</a>
				<a href="/about">За нас</a>
				<a href="">Каталог</a>
				<a href="/contact">Контакт</a>
			</div>
			<div><img src="../images/usFlag.png" style="width: 35px;"></div>
		</div>
	</div>
</div>

<div class="main" id="mainApp">
	<div class="categories" style="background: rgb(248, 248, 248); padding: 30px 0px;">
		<div class="container">
			<h1><%= category.categoryName %></h1>
			<hr class="mainLine">
			<div class="row">

				<% products.forEach(function(product){ 
                   if(product.productCategory == category.categoryName){ %>

				<div class="col-12 col-sm-12 col-md-3 col-lg-3" onclick="document.getElementById('productModal'+'<%= product.id %>').style.display = 'block';" style='cursor: pointer;'>
					<div class="productBox">
						<img src="../../images/products/<%= product.productImageID %>">
						<hr>
						<h2><%= product.productName %></h2>
					</div>
				</div>

				<div id="productModal<%= product.id %>" class="modal">
	                <div class="modal-content">
	                    <span class="close" onclick="document.getElementById('productModal'+'<%= product.id %>').style.display = 'none';">&times;</span>
	                    <hr>
	                    <div class="row">
	                        <div class="col-12 col-md-6">
	                        <img src="../../images/products/<%= product.productImageID %>" style='width: -webkit-fill-available; margin: auto; border: 1px solid #ccc; margin-bottom: 10px;'>
	                        </div>
	                        <div class="col-12 col-md-6">   
								<h1 style="font-size: 20px;"><%= product.productName %></h1>
                                <hr>
                                <h1 style="font-size: 15px; text-align: left;">Опис</h1>
                                <p style="white-space: break-spaces;"><%= product.productDescription %></p>
                                <% if(product.productPurpose != ""){ %>
                                    <h1 style="font-size: 15px; text-align: left;">Начин на употреба/дозирање</h1>
                                    <p style="white-space: break-spaces;"><%= product.productPurpose %></p>
                                <% } %>
                                <div style="display: flex; align-items: center; justify-content: center; margin-top: 50px;">
                                    <i class="fas fa-ban" style="font-size: 50px; color: red; margin-right: 10px;"></i>
                                    <div style="display: flex; flex-direction: column; align-items: center;">
                                        <h1 style="font-size: 14px; text-align: left; text-transform: uppercase; margin-bottom: 0;">Само за професионална употреба !</h1>
                                        <h1 style="font-size: 14px; text-align: left; text-transform: uppercase; margin-bottom: 0;">Подалеку од дофат на деца !!</h1>
                                    </div>
                                </div>
	                        </div>
	                    </div>
	                </div>
	                <%  }
                    }); %>
	            </div>
			</div>
		</div>
	</div>
</div>