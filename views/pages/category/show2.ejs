<div class="main" id="mainApp">
	<div class="categories" style="background: rgb(248, 248, 248); padding: 30px 0px;">
		<div class="container">
			<h1 v-if="language == 'mk'"><%= category.categoryName %></h1>
			<h1 v-if="language == 'en'"><%= category.categoryNameEN %></h1>
			<hr class="mainLine">

			<div class="row" v-if="language == 'mk'">
				<% products.forEach(function(product){ 
                   if(product.productCategory == category.categoryName){ %>
				<div class="col-md-1 col-lg-1"></div>
				<div class="col-12 col-sm-12 col-md-10 col-lg-10" onclick="document.getElementById('productModal'+'<%= product.id %>').style.display = 'block';">
					<div class="productBox" style="display: flex;">
						<img src="../../images/products/<%= product.productImageID %>" style="width: 300px;">
						<div class="productBoxText" style="margin:15px; display: flex; flex-direction: column; justify-content: space-between; width: 100%;">
							<h2><%= product.productName %></h2>
							<hr>
							<div class="productBoxText2">
								<div class="description">
									<h3>Опис</h3>
									<hr style="margin: 10px 0; height: 3px; background: green;">
									<p><%= product.productDescription %></p>
								</div>
								<div class="method">
									<h3>Начин на употреба/дозирање</h3>
									<hr style="margin: 10px 0; height: 3px; background: green;">
									<p><%= product.productPurpose %></p>
								</div>	
							</div>
							<div class="warningMessage">
								<i class="fas fa-ban" style="font-size: 50px; color: red; margin-right: 10px;"></i>
								<div style="display: flex; flex-direction: column; align-items: center;">
									<h1 style="font-size: 14px; text-align: left; text-transform: uppercase; margin-bottom: 0;">Само за професионална употреба !</h1>
									<h1 style="font-size: 14px; text-align: left; text-transform: uppercase; margin-bottom: 0;">Подалеку од дофат на деца !!</h1>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-md-1 col-lg-1"></div>
				<%  }
                }); %>
			</div>

			<div class="row" v-if="language == 'en'">
				<% products.forEach(function(product){ 
                   if(product.productCategory == category.categoryName){ %>
				<div class="col-md-1 col-lg-1"></div>
				<div class="col-12 col-sm-12 col-md-10 col-lg-10" onclick="document.getElementById('productModal'+'<%= product.id %>').style.display = 'block';">
					<div class="productBox" style="display: flex;">
						<img src="../../images/products/<%= product.productImageID %>" style="width: 300px;">
						<div class="productBoxText" style="margin:15px; display: flex; flex-direction: column; justify-content: space-between; width: 100%;">
							<h2><%= product.productNameEN %></h2>
							<hr>
							<div class="productBoxText2">
								<div class="description">
									<h3>Description</h3>
									<hr style="margin: 10px 0; height: 3px; background: green;">
									<p><%= product.productDescriptionEN %></p>
								</div>
								<div class="method">
									<h3>Method of use/dosage</h3>
									<hr style="margin: 10px 0; height: 3px; background: green;">
									<p><%= product.productPurposeEN %></p>
								</div>	
							</div>
							<div class="warningMessage">
								<i class="fas fa-ban" style="font-size: 50px; color: red; margin-right: 10px;"></i>
								<div style="display: flex; flex-direction: column; align-items: center;">
									<h1 style="font-size: 14px; text-align: left; text-transform: uppercase; margin-bottom: 0;">For professional use only !</h1>
									<h1 style="font-size: 14px; text-align: left; text-transform: uppercase; margin-bottom: 0;">Keep out of reach of children !!</h1>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-md-1 col-lg-1"></div>
				<%  }
                }); %>
			</div>
		</div>
	</div>
</div>